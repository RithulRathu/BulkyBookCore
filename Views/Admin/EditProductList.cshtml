@model BulkyBook.Models.ViewModels.ProductVM

@{
    ViewData["Title"] = "Create ProductList";
    string imagePath = string.Empty;
    imagePath = "/images/" + Model.Product.Images;
}

<h1>ProductList</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form class="form-horizontal" asp-action="UpdateProductList" enctype="multipart/form-data" method="post">
            <input type="hidden" asp-for="Product.Id"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-3">                
                <span class="col-md-3"><label asp-for="Product.Title" class="control-label"></label></span>
                <span class="col-md-7"><input asp-for="Product.Title" class="form-control" /></span>
                <span asp-validation-for="Product.Title" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <span class="col-md-3"><label asp-for="Product.Isbn" class="control-label"></label></span>
                    <span class="col-md-7"><input asp-for="Product.Isbn" class="form-control" /></span>
                <span asp-validation-for="Product.Isbn" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <span class="col-md-3"><label asp-for="Product.Author" class="control-label"></label></span>
                    <span class="col-md-7"><input asp-for="Product.Author" class="form-control" /></span>
                <span asp-validation-for="Product.Author" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <span class="col-md-3"><label asp-for="Product.Description" class="control-label"></label></span>
                    <span class="col-md-7"><input asp-for="Product.Description" class="form-control" /></span>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <span class="col-md-3"><label asp-for="Product.ListPrice" class="control-label"></label></span>
                <span class="col-md-7"><input asp-for="Product.ListPrice" class="form-control" /></span>
                <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <span class="col-md-3"><label asp-for="Product.Price" class="control-label"></label></span>
                    <span class="col-md-7"><input asp-for="Product.Price" class="form-control" /></span>
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <span class="col-md-3"><label asp-for="Product.Price50" class="control-label"></label></span>
                    <span class="col-md-7"><input asp-for="Product.Price50" class="form-control" /></span>
                <span asp-validation-for="Product.Price50" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <span class="col-md-3"><label asp-for="Product.Price100" class="control-label"></label></span>
                    <span class="col-md-7"><input asp-for="Product.Price100" class="form-control" /></span>
                <span asp-validation-for="Product.Price100" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <span class="col-md-3"><label asp-for="Product.CategoryId" class="control-label"></label></span>
                    <span class="col-md-7"><select asp-for="Product.CategoryId" class="form-control" asp-items="@Model.CategoryList"></select></span>
            </div>
            <div class="row mb-3">
                <span class="col-md-3"><label asp-for="Product.CoverTypeId" class="control-label"></label></span>
                    <span class="col-md-7"><select asp-for="Product.CoverTypeId" class="form-control" asp-items="@Model.CoverTypeList"></select></span>
            </div>
            <div class="row mb-3">
                <span class="col-md-3"><label asp-for="Product.Images" class="control-label"></label></span>
                <span class="col-md-7"><input type="file" name="postedFile" asp-for="Product.Images" class="form-control" /></span>
                <span asp-validation-for="Product.Images" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
    @if(imagePath !=null){
        <div class="col-md-4">
            <img src="@imagePath" alt="product image" title="product image" />
        </div>
    }
    
</div>

<div>
    <a asp-action="ShowProductList">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

