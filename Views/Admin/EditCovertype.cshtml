@model BulkyBook.Models.CoverType
<div class="container">
    <form method="post" asp-action="EditCovertype">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="row  mt-4">
            <div class="col-md-3">@Html.DisplayNameFor(x => x.Name)</div>
            <div class="col-md-9"><input type="text" class="form-control" asp-for="Name" /><span class="text-danger" asp-validation-for="Name"></span></div>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-9 bb-desktop-flex bb-gap-6">
                <div class="col-md-6 mt-3">
                    <input type="submit" class="btn btn-success w-100" value="Update" />
                </div>
                <div class="col-md-6 mt-3">
                    <a class="btn btn-secondary w-100" asp-controller="Admin" asp-action="CoverTypeList">Back to List</a>
                </div>
            </div>
        </div>

    </form>
</div>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
