@model IEnumerable<BulkyBook.Models.CompanyModel>

<div class="row">
    <div class="row mt-4 mb-4">
        <div class="col col-lg-6"><h1>Company List</h1></div><div class="col col-lg-6"><a asp-controller="Admin" asp-action="CreateCompany" class="btn btn-success">Create Company</a></div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-borderless table-striped bb-table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(x => x.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.StreetAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.State)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.IsAuthorizesd)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.Name)</td>
                        <td>@Html.DisplayFor(m => item.StreetAddress)</td>
                        <td>@Html.DisplayFor(m => item.City)</td>
                        <td>@Html.DisplayFor(m => item.State)</td>
                        <td>@Html.DisplayFor(m => item.Phone)</td>
                        <td>@Html.DisplayFor(m => item.IsAuthorizesd)</td>
                        <td>
                            <span class="col-md-6">
                                <a asp-controller="Admin" asp-action="EditCompanyList" asp-route-Id="@item.Id">
                                    <span class="bb-btnEdit">
                                        <i class="bi bi-pencil-square"></i>
                                    </span>
                                </a>
                            </span>
                            <span class="col-md-6">
                                <a asp-controller="Admin" asp-action="DeleteCompany" asp-route-Id="@item.Id">
                                    <span class="bb-btnDelete">
                                        <i class="bi bi-trash"></i>
                                    </span>
                                </a>
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="row"><span class="text-success">No Company Existing....</span></div>
    }
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
