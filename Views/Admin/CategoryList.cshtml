@model IEnumerable<BulkyBook.Models.Category>

<div class="row">
    <div class="row mt-4 mb-4">
        <div class="col col-lg-6"><h1>Category List</h1></div><div class="col col-lg-6"><a asp-controller="Admin" asp-action="CreateCategory" class="btn btn-success">Create Category</a></div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-borderless table-striped bb-table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(x => x.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.Name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.Id)</td>
                        <td>@Html.DisplayFor(m => item.Name)</td>
                        <td>
                            <span class="col-md-6">
                                <a asp-controller="Admin" asp-action="EditCategory" asp-route-Id="@item.Id">
                                    <span class="bb-btnEdit">
                                        <i class="bi bi-pencil-square"></i>
                                    </span>
                                </a>
                            </span>
                            <span class="col-md-6">
                                <a asp-controller="Admin" asp-action="DeleteCategory" asp-route-Id="@item.Id">
                                    <span class="bb-btnDelete">
                                        <i class="bi bi-trash"></i>
                                    </span>
                                </a>
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="row"><span class="text-success">No Categories Existing....</span></div>
    }
</div>

