@model IEnumerable<BulkyBook.Models.Cart>
@{var totalprice = 0;}
<div class="bb-block">
     <form method="post" asp-action="Place_Order">
        <div class="bb-block bb-cartMaindiv">
             <div class="bb-block bb-cartSectionOne">
                  <span class="bb-shoppingcart"><i class="bi bi-cart"></i> Order Summary</span>
                  <span class="bb-Continueshopping"><a class="btn btn-outline-primary" asp-controller="Home" asp-action="Cart">Back To Cart</a></span>
             </div>
             <div class="bb-block bb-cartsummarySectionTwo">
                  <div class="bb-cartsummarySectionTwoinner">
                       <div class="col col-md-5 ps-4 pe-4">
                           <h5 class="mb-3">PickUp Details:</h5>
                           @if (Model.Any())
                           {
                               <div class="row mb-2">
                                    <div class="col-md-3"><label class="form-label">Name</label></div>
                                <div class="col-md-9"><input type="text" class="form-control" asp-for="@Model.First().RegisteredUserslist.Name" name="Name"/></div>
                               </div>
                               <div class="row mb-2">
                                    <div class="col-md-3"><label class="form-label">Phone</label></div>
                                    <div class="col-md-9"><input type="text" class="form-control" asp-for="@Model.First().RegisteredUserslist.PhoneNumber" name="Phone"/></div>
                               </div>
                               <div class="row mb-2">
                                    <div class="col-md-3"><label class="form-label">Email</label></div>
                                    <div class="col-md-9"><input type="text" class="form-control" asp-for="@Model.First().RegisteredUserslist.Email" name="Email"/></div>
                               </div>
                               <div class="row mb-2">
                                    <div class="col-md-3"><label class="form-label">Street Address</label></div>
                                    <div class="col-md-9"><input type="text" class="form-control" asp-for="@Model.First().RegisteredUserslist.StreetAddress" name="Address"/></div>
                               </div>
                               <div class="row mb-2">
                                    <div class="col-md-3"><label class="form-label">City</label></div>
                                    <div class="col-md-9"><input type="text" class="form-control" asp-for="@Model.First().RegisteredUserslist.City" name="City"/></div>
                               </div>
                               <div class="row mb-2">
                                    <div class="col-md-3"><label class="form-label">State</label></div>
                                    <div class="col-md-9"><input type="text" class="form-control" asp-for="@Model.First().RegisteredUserslist.State" name="State"/></div>
                               </div>
                               <div class="row mb-2">
                                    <div class="col-md-3"><label class="form-label">Postal Code</label></div>
                                    <div class="col-md-9"><input type="text" class="form-control" asp-for="@Model.First().RegisteredUserslist.PostalCode" name="PostalCode"/></div>
                               </div>
                           }
                       </div>
                       <div class="col col-md-3 ps-4 pe-4"></div>
                       <div class="col col-md-4 ps-4 pe-4">
                           <h5 class="mb-3">Order Summary:</h5>
                           <div class="bb-block bb-ordersummaryinnerdiv">
                               <div class="bb-block">
                                    @foreach(var item in Model) {
                                    <div class="bb-block bb-orderitemSpan">
                                        <div class="bb-orderitem bb-left ">
                                         
                                                 <span class="bb-block bb-orderitemname">@item.ProductItem.Title</span>
                                            <span class="bb-block bb-orderitemquantity">Quantity:@item.Count</span>
                                                                                 
                                        </div>
                                        <div class="bb-orderitemprice bb-right ">@item.TotalPrice</div>
                                    </div>
                                    var totalcartPrice = @item.TotalPrice;
                                    totalprice = Convert.ToInt32(totalprice + totalcartPrice);
                                    }
                               </div>
                               <div class="bb-block">
                                    <div class="bb-block bb-orderitemtotalprice">
                                         <span class="bb-ordertotaltext bb-left">Total:</span><span class="bb-ordertotalprice bb-right">@totalprice</span>
                                    </div>
                               </div>
                           </div>
                       </div>
                  </div>                 
             </div>         
            <div class="bb-block bb-cartsummarySectionThree">
            <span class="bb-ArivalDate text-danger">
                Estimate Arrival Date: @DateTime.Today.ToString("d").Replace("-","/") - @DateTime.Now.AddDays(5).ToString("d").Replace("-","/")
            </span><span class="bb-btnsummary"><input type="submit" class="btn btn-success w-100" value="Place Order" /></span>
            </div>
        </div>
    </form>
</div>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
